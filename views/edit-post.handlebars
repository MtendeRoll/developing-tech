<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <div class="card">
    <div class="card-body">
          <h2 class="card-header">
            Edit Post
          </h2>
          <form id="edit-post-form">
            <div>
              <input name="post-id" type="text" value="{{post.title}}" />
            </div>
            <div>
              <textarea name="post-body" type="text" value="{{post.body}}"></textarea>
            </div>
            <div>
              by you on {{format_date post.created_at}}
              |
              <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
            </div>
            <button class="btn" type="submit">Save post</button>
            <button class="btn" type="button" id="delete-btn">Delete post</button>
          </form>
    </div>
  </div>
</article>

<div class="card">
  <div class="card-body">
      <form id="new-comment-form">
        <div>
          <textarea name="comment-body"></textarea>
        </div>

        <div>
          <button class="btn" type="submit">add comment</button>
        </div>
      </form>
  </div>
</div>

{{> comments post.comments}}

<script src="/js/edit.js"></script>
<script src="/js/comment.js"></script>
{{> post-info post}}

<div class="card">
  <div class="card-header"> {{title}}</div>
  <div class="card-body">{{post_text}}  | {{user_id}}</div>
</div>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}


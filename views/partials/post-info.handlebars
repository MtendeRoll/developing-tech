<article>
  <div class="card">
    <div class="card-body">
      <h4 class="card-header">{{title}}</h4>
      <h5>Posted by:
        {{user.username}}
        on
        {{format_date created_at}}</h5>
      <p>{{body}}</p>
      <a href="/post/{{id}}">{{comments.length}}
        {{format_plural "comment" comments.length}}</a>
    </div>
  </div>
</article>
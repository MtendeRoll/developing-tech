<article>
  <div class="card">
    <div class="card-body">
      <a href="/post/{{id}}">
        <h4 class="card-header">{{title}}</h4>
      </a>
        <h5>Posted by:
        {{user.username}}
        on
        {{format_date created_at}}</h5>
        <p>{{body}}</p>
    </div>
  </div>
</article>